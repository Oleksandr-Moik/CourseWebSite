a.btn.btn-success.mr-2(href=currentUrl+'create') Create new

table.table.table-hover
    thead.thead-light
        tr
            th(scope='col') #
            th(scope='col') Title
            th(scope='col') Description
            th(scope='col') Tasks (count)
            th(scope='col') Actions
    tbody
        -
            var iter = 1;
        each item in data
            - var {title='', description='', tasks=[], _id=''} = item
            tr
                th(scope='row')= iter

                - var short = title, maxLength = 30
                if title.length > maxLength
                    - short = title.substring(0, maxLength)+'...'
                td=short

                - short = description; maxLength = 50
                if description.length>maxLength
                    - short = description.substring(0, maxLength)+'...'
                td=short
                td=tasks.length
                td.d-flex
                    a.mr-1.btn.btn-warning(href='edit/'+_id) Edit
                    a.mr-1.btn.btn-danger(href='delete/'+_id) Delete
            - iter++
